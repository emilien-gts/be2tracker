{% extends 'base.html.twig' %}

{% block title %}Add bet{% endblock %}

{% block body %}
    <div class="container mx-auto p-5">
        <div class="grid grid-cols-1 gap-4 lg:grid-cols-4 lg:gap-8">
            <div class="h-32 rounded-lg"></div>
            <div class="h-32 rounded-lg lg:col-span-2">
                <div class="d-flex justify-content-between align-items-center pb-4 mb-3">
                    <h1 class="text-primary">Add bet</h1>
                </div>

                <!-- Enum Cards -->
                {% for enum in enum('App\\Enum\\Bankroll\\BettingSlipTypeEnum').cases %}
                    <a href="{{ path('app_bankroll_bettingslip_new', {type: enum.value}) }}"
                        class="flex items-center gap-4 rounded-lg border border-gray-100 bg-white p-6 sm:justify-between mb-4"
                    >
                      <span class="rounded-full bg-pink-100 p-3 text-pink-600 sm:order-last">
                          {{ ux_icon(enum.icon, {class: 'size-8'}) }}
                      </span>

                        <div>
                            <p class="text-2xl font-medium text-gray-900">{{ enum.label }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="h-32 rounded-lg"></div>
        </div>
    </div>
{% endblock %}
